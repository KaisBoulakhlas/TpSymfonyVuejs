{% extends 'base.html.twig' %}

{% block title %}Leçon{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Leçon n° {{ lesson.id }}</h1>
        <hr>
        <div class="row">
            <div class="col-sm-6">
                <div class="card" style="background-color: lightgray">
                    <div class="card-body">
                        <h5 class="card-title"> Titre :{{ lesson.title }}</h5>
                        <p class="card-text">Professeur : {{ lesson.teacher}}</p>
                        <p class="card-text">Date de début : {{ lesson.startAt|date("d/m/Y")}}</p>
                        <p class="card-text">Date de fin : {{ lesson.endAt|date("d/m/Y")}}</p>
                        <h5>Ajouter un commentaire : <a href="{{ path('admin.comment.add', {id: lesson.id}) }}" class="btn btn-outline-primary" style="font-size:1px;"><i class="material-icons" >add_comment</i></a></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}