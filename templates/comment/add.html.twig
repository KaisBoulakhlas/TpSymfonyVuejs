{% extends 'base.html.twig' %}

{% block title %}Ajouter un commentaire{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Ajouter un commentaire</h1>
        <hr/>
        <div class="container">
            {{ form_start(form) }}
            <div class="form-row">
                <div class="form-group col-md-4">
                    {{ form_row(form.email, {'attr': {'class': 'form-control'}} ) }}
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    {{ form_row(form.author, {'attr': {'class': 'form-control'}} ) }}
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    {{ form_row(form.content, {'attr': {'class': 'form-control'}} ) }}
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    {{ form_row(form.imageFile, {'attr': {'class': 'form-control'}} ) }}
                </div>
            </div>

            <div class="form-row">
                {{ form_widget(form)}}
                <button class="btn btn-outline-success" style="margin-left:5px;">{{ button|default('Ajouter')}}</button>
                {{ form_end(form)}}
            </div>
        </div>
    </div>

{% endblock %}