{% extends 'base.html.twig' %}

{% block title %}Commentaire {{ comment.id }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Commentaire n ° {{ comment.id }}</h1>
    <hr class="dotted"/>
    <table class="table table-striped table-hover">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ comment.id }}</td>
        </tr>
        <tr>
            <th>Auteur : </th>
            <td>{{ comment.author }}</td>
        </tr>
        <tr>
            <th>Commentaire :</th>
            <td>{{ comment.content }}</td>
        </tr>
        <tr>
            <th>Créé le :</th>
            <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <div class="mb-1">
        <a href="{{ path('admin.comment.edit', {id: comment.id}) }}" class="btn btn-sm btn-primary">Modifier</a>
        <a href="{{ path('admin.comment.index', {id: comment.lesson.id}) }}" class="btn btn-sm btn-info">Retour</a>
    </div>

    {{ include('comment/_delete_form.html.twig') }}
</div>
{% endblock %}
